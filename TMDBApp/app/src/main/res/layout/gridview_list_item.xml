<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/grid_item_poster"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"/>

        <TextView
            android:id="@+id/grid_item_title"
            android:layout_below="@+id/grid_item_poster"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="8dp"
            android:maxLines="2"
            android:textColor="@android:color/black"
            android:textSize="14sp"/>

        <LinearLayout
            android:id="@+id/dateLayout"
            android:orientation="horizontal"
            android:layout_below="@+id/grid_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginEnd="12dp">

            <TextView
                android:id="@+id/grid_item_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:alpha="0.7"
                android:textSize="12sp"
                android:drawableLeft="@drawable/ic_date_range_black_18dp"
                android:drawablePadding="4dp"
                android:layout_gravity="center_vertical" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_below="@+id/dateLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="12dp"
            android:layout_alignParentBottom="true"
            android:paddingBottom="12dp"
            android:gravity="bottom">

            <TextView
                android:id="@+id/grid_item_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textSize="12sp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_star_rate_black_18dp"
                android:drawablePadding="4dp"
                android:gravity="start" />

            <TextView
                android:id="@+id/grid_item_popularity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:maxLength="2"
                android:alpha="0.7"
                android:textSize="12sp"
                android:layout_weight="1"
                android:drawableRight="@drawable/ic_whatshot_black_18dp"
                android:drawablePadding="4dp"
                android:gravity="end" />

        </LinearLayout>



    </RelativeLayout>


</android.support.v7.widget.CardView>